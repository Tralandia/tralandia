{foreach $reservations as $reservation}
	<div class="row-fluid">
		<div class="order-manager-item span12">
			<h2>
				<span class="status ok"><i class="icon-ok"></i></span>
				<a href="#">{$reservation->senderName}</a>
			</h2>
			<div class="details">
				<i><b>{$reservation->arrivalDate} - {$reservation->departureDate}</b></i><br/>
				{$reservation->adultsCount} dospelych, {$reservation->childrenCount} deti ({$reservation->childrenAge})
			</div>
			<div class="clearfix"></div>
			<div class="detail-box">
				<p><a href="#" class="email">{$reservation->senderEmail}</a>, +421 919 396 336</p>
				<p class="answer">{$reservation->ownersNote}</p>
				<a class="btn btn-small btn-orange pull-right" n:href="ReservationEdit: $reservation->id">!!!detaily <i class="icon-arrow-right"></i></a>
				<a href="#" class="pull-right remove"><i class="icon-trash"></i></a>
				<p class="prices">!!!Total: {$reservation->totalPrice} !!!EUR, <strong>!!!Due: {($reservation->totalPrice - $reservation->paidPrice)} !!!EUR</strong></p>
			</div>
		</div>
	</div>
{/foreach}

{control p}

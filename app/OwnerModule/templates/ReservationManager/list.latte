{block content}

<div class="clearfix">
	<a n:href="add" class="btn short btn-mini marginTop marginRight btn-blue pull-right">Pridat objednavku</a>
	<h1 class="rentalEditHeader">Manazer objednavok</h1>
</div>
<form class="quick-search">
    <select class="select2" style="width:200px;">
        <option>- Vyberte objekt -</option>
        <option>Štýlová villa Flora pri aquaparku Tatralandia</option>
        <option>Chata Flora pri Donovaloch</option>
    </select>
    <select class="select2" style="width:100px;">
        <option>Všetky (3)</option>
        <option>Minulé (2)</option>
        <option>Aktuálne (1)</option>
        <option>Budúce (0)</option>
    </select>
    <input name="query" placeholder="vyhladat podla emailu, mena alebo telefonu...">
	<button type="submit" class="btn btn-small"><i class="icon-search"></i> Hladat</button>
</form>

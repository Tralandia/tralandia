{*
	Base Control -------------------------------------------
	@param $control \Nette\Forms\Controls\BaseControl
	@param $prepend array
	@param $append array
	@param $controlClass string
*}
{define #baseControl}
<tr>
	<td>
		{_$control->caption}       
	</td>
	<td>
		{capture $input}
			{ifset $controlClass}
				{input $control, class => $controlClass}
			{else}
				{input $control}
			{/ifset}
		{/capture}

		{ifset $prepend}
			<div class="input-prepend">
				<table>
					<tr>
						<td class="prepend"><span class="add-on">{!$prepend['text']}</span></td>
						<td>{!$input}</td>
					</tr>
				</table>
			</div>
		{elseifset $append}
			<div class="input-append">
				<table>
					<tr>
						<td>{!$input}</td>
						<td class="append"><span class="add-on">{!$append['text']}</span></td>
					</tr>
				</table>
			</div>
		{else}
				<table>
					<tr>
						<td>{!$input}</td>
					</tr>
				</table>
		{/ifset}	
	</td>
	<td>
		<span class="help">{$control->getOption('description')}Select the country your rental is in. What if it was longer?</span>
		<span class="invalidAlert">{include #controlErrors, errors => $control->getErrors()}</span>
	</td>
</tr>
{/define #baseControl}


{*
	Errors -------------------------------------------
	@param $errors array
*}
{define #controlErrors}
	{foreach $errors as $error}{$error}{/foreach}
{/define #controlErrors}


{*

{*
	Phrase Container -------------------------------------------
	@param $control \Extras\Forms\Container\PhraseContainer
*}
{define #phrase}
{var
	$container = $control;
	$phrase = $container->getPhrase();
}
{?unset($control)}
<div class="row-fluid phraseForm">

	<div class="span12">
	

	<div class="span2">
		{label $container['phraseType'] /}
		{input $container['phraseType'] , class => 'select2'}       
	</div>


	<div class="span3">
		{label $container['sourceLanguage'] /}
		{input $container['sourceLanguage'], class => 'select2'}
	</div>

	<div class="span2">        
		  {input $container['ready']}
		  {label $container['ready'] /}        
		<b>Translation | <span id="phraseTranslateCurrent"></b>
	</div>
	<div class="span2">
		
		  {input $container['corrected']}
		  {label $container['corrected'] /}
		

		{input $container['changeToLanguage'] , class => 'select2 pull-right' , id => 'phraseLanguage'} 

	</div>  

	</div>
	<hr />
	<div class="span6">
		
	{include #translationVatiations, control => $container['fromVariations']}

	</div>
	<div class="span6">

		
	{foreach $container['to']->getComponents() as $languageContainer}
	{var $language = $languageContainer['variations']->getLanguage()}
	<div class="phrasecontrol hide" id="{$language->getId()}_phrase"> 


		{include #translationVatiations, control => $languageContainer['variations']}

		<div class="pull-left">
		{label $languageContainer['gender'] /}
		{input $languageContainer['gender'] , class => 'select2'}
		</div>

		<div class="pull-right">
		{label $languageContainer['position'] /}
		{input $languageContainer['position'] , class => 'select2'}
		</div>
		<div class="clearfix"></div>



	</div>
	{/foreach}


	</div>

</div>

{/define #phrase}


{*
	Translation Variations Container -------------------------------------------
	@param $control \Extras\Forms\Container\TranslationVariationsContainer
*}
{define #translationVatiations}
{var
	$container = $control;
	$phrase = $container->getPhrase();
	$language = $container->getLanguage();
}
{?unset($control)}
<table class="phraseTable table-striped table">
	<tr>
		{if $phrase->type->pluralVariationsRequired}
			<th>Count</th>
		{/if}
		{if $phrase->type->genderVariationsRequired}
			{foreach $language->genders as $genderName}
				<th>{$genderName}</th>
			{/foreach}
		{/if}
	</tr>
	{foreach $container->getComponents() as $plural}
		<tr>
			{if $phrase->type->pluralVariationsRequired}
				<td>{$language->getPluralName($plural->getName())}</td>
			{/if}
			{foreach $plural->getComponents() as $genders}
				<td>
					{foreach $genders->getComponents() as $gender}
						{$gender->getControl()}
					{/foreach}
				</td>
			{/foreach}
		</tr>
	{/foreach}
</table>

{/define #translationVatiations}



			{!$control->getLabelItem($key)->addAttributes(['class' => 'checkbox'])->startTag()}
			{$control->getControlItem($key)}
			{_$label}
			</label>
		{/foreach}
	</div>
</div>
{/define #checkboxList} *}

{define #checkboxList}
	<tr>
		<td colspan="3">
			<table>
				<tr>
					<td>{_$control->caption}</td>
				</tr>
				<tr>
					<td>
			{foreach $control as $key => $label}
				{!$control->getLabelItem($key)->addAttributes(['class' => 'checkbox'])->startTag()} {* <label ...> *}
				{$control->getControlItem($key)}
				{_$label}
				</label>
			{/foreach}

					</td>
				</tr>
			</table>
		</td>
	</tr>

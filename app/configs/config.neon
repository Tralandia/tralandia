			enabled: TRUE
			key: '[language]_[primaryLocation]'
			expiration: 'tomorrow'
			tags: ['[name]']
		searchBar:
			enabled: TRUE
			key: '[language]_[primaryLocation]_[zeroSearch]'
			expiration: 'tomorrow'
			tags: ['[name]']

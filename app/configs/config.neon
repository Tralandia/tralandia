		expiration: '+1 year'
		cookie_path: '/'
		cookie_domain: '.tra.com'

	latte:
		macros:
			- Extras\ImageMacro
			- Extras\Macros

	security:
		frames:

extensions:
	events: Kdyby\Events\DI\EventsExtension


parameters:

	security:
		salt: '8723lks762ngknl90835bkd'
		sender: 'noreply@tralandia.sk'

	envOptions:
		sendEmail: TRUE

	domainMask: "<language ([a-z]{2}|www)>.<primaryLocation [a-z]{2,4}>.%%domain%%"

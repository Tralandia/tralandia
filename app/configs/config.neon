	database:
		user: root
		password: root
		host: 127.0.0.1
		dbname: tralandia
		charset: utf8
		driver: pdo_mysql
		debugger: false

	cacheDatabase:
		user: root
		password: root
		host: 127.0.0.1
		database: tralandia_cache
		charset: utf8
		lazy: TRUE

	smtp:
		host: mail.tralandia.com
		username: robot@tralandia.com
		password: R03OT



	templateCache:
		enabled: TRUE

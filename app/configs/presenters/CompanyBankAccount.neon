common:
	service: Service\Company\BankAccount
	title: Company / BankAccount
	h1: Company / BankAccount
	grid:
		columns:
			id:
				label: ID
				mapper: e.id
			countries:
				label: Countries
				mapper: e.id
				callback: {class: %this%,method: getAttributeForGrid, params: [countries, name, ', ']}
			company:
				label: Company
				mapper: e.id
				callback: {class: %this%, method: getAttributeForGrid, params: [company, name]}
			bankName:
				label: BankName
				mapper: e.bankName
			bankSwift:
				label: BankSwift
				mapper: e.bankSwift
			accountNumber:
				label: AccountNumber
				mapper: e.accountNumber
			accountIban:
				label: AccountIban
				mapper: e.accountIban

			
	form:
		fields:
			company:
				label: Company
				control: 
					type: select
			countries:
				label: Countries using this bank account
				class: span9
				control: 
					type: bricksList
				inlineEditing: LocationLocation:edit
				inlineCreating: LocationLocation:add
				startNewRow: false
			bankName:
				label: BankName
				control: 
					type: text
				startNewRow: true
			bankAddress:
				label: BankAddress
				control: 
					type: text
			bankSwift:
				label: BankSwift
				control: 
					type: text
			accountName:
				label: AccountName
				control: 
					type: text
			accountNumber:
				label: AccountNumber
				control: 
					type: text
				startNewRow: true
			accountIban:
				label: AccountIban
				control: 
					type: text
			notes:
				startNewRow: true
				label: Notes
				control: 
					type: text
				class: span12